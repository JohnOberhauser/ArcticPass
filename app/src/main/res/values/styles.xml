<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorAccent">@color/colorAccentLight</item>

        <item name="colorBackground">@color/white</item>
        <item name="colorForeground">@color/colorPrimaryLight</item>
        <item name="colorRed">@color/red</item>
        <item name="colorPrimaryText">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
    </style>

    <style name="AppThemeDark" parent="ThemeOverlay.MaterialComponents.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>

        <item name="colorBackground">@color/dark_grey</item>
        <item name="colorForeground">@color/light_grey</item>
        <item name="colorRed">@color/red</item>
        <item name="colorPrimaryText">@color/light_grey</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
