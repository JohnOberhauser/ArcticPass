<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal8</item>
        <item name="colorPrimaryDark">@color/teal5</item>
        <item name="colorAccent">@color/teal6</item>

        <item name="colorBackground">@color/white</item>
        <item name="colorForeground">@color/teal8</item>
        <item name="colorRed">@color/red</item>
        <item name="colorPrimaryText">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/teal8</item>
    </style>

    <style name="AppThemeDark" parent="ThemeOverlay.MaterialComponents.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal3</item>
        <item name="colorPrimaryDark">@color/teal2</item>
        <item name="colorAccent">@color/teal6</item>

        <item name="colorBackground">@color/dark_grey</item>
        <item name="colorForeground">@color/teal8</item>
        <item name="colorRed">@color/red</item>
        <item name="colorPrimaryText">@color/light_grey</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
